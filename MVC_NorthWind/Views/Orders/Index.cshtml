@model IEnumerable<MVC_NorthWind.Models.Orders>

@{
    ViewBag.Title = "Ordenes";
}

<head>
    <style>
        .card {
            margin-top: 2em;
            margin-left: 15em;
        }
    </style>
</head>

<div class="card shadow p-3 mb-5" style="width: 50rem;">
    <div class="card-body" align="center">
        <img class="rounded mx-auto d-block w-50" src="~/images/gif/orders.gif">
        <h3 class="card-title">Seccion de Ordenes</h3>
        <h4 class="card-text">Elija la opcion que desea realizar</h4>
        <a href="/Orders/Create" class="btn btn-primary">Añadir Orden</a>
        <a href="/Orders/TodasOrdenes" class="btn btn-primary">Mostrar Todos Las Ordenes</a>
    </div>
</div>