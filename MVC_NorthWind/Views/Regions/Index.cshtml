@model IEnumerable<MVC_NorthWind.Models.Region>

@{
    ViewBag.Title = "Regiones";
}

<head>
    <style>
        .card {
            margin-top: 2em;
            margin-left: 15em;
        }
    </style>
</head>

<div class="card shadow p-3 mb-5" style="width: 50rem;">
    <div class="card-body" align="center">
        <img class="rounded mx-auto d-block w-50" src="~/images/gif/regions.gif" />
        <h3 class="card-title">Seccion de Regiones</h3>
        <h4 class="card-text">Elija la opcion que desea realizar</h4>
        <a href="/Regions/Create" class="btn btn-primary">Añadir Region</a>
        <a href="/Regions/TodasRegiones" class="btn btn-primary">Mostrar Todos Las Regiones</a>
    </div>
</div>
