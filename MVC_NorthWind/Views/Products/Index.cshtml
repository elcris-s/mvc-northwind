@model IEnumerable<MVC_NorthWind.Models.Products>

@{
    ViewBag.Title = "Productos";
}

<head>
    <style>
        .card {
            margin-top: 2em;
            margin-left: 15em;
        }
    </style>
</head>

<div class="card shadow p-3 mb-5" style="width: 50rem;">
    <div class="card-body" align="center">
        <img class="rounded mx-auto d-block w-50" src="~/images/gif/products.gif" />
        <h3 class="card-title">Seccion de Productos</h3>
        <h4 class="card-text">Elija la opcion que desea realizar</h4>
        <a href="/Products/Create" class="btn btn-primary">Añadir Producto</a>
        <a href="/Products/TodosProductos" class="btn btn-primary">Mostrar Todos Los Productos</a>
    </div>
</div>